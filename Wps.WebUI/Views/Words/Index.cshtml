@model IEnumerable<Wps.Domain.Entities.Word>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.English)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Swahili)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sound)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.English)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Swahili)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sound)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WordID }) |
            @Html.ActionLink("Details", "Details", new { id=item.WordID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WordID })
        </td>
    </tr>
}

</table>
